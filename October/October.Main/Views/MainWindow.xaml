<Window x:Class="October.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:October.Main"        
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="管廊运营"
        x:Name="mainWindow" ShowInTaskbar="False"
        AllowsTransparency="True" WindowStyle="None"         
        WindowStartupLocation="Manual"
        ResizeMode="CanMinimize"        
        WindowState="Normal">
    <Grid Width="100" Height="344" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Background="Transparent">
            
            <MenuItem x:Name="menu1" Header="文件">
                <MenuItem x:Name="menu2" Header="最近"></MenuItem>
                <MenuItem x:Name="menu3" Header="关于"></MenuItem>
            </MenuItem>
            
        </Menu>
    </Grid>
</Window>
